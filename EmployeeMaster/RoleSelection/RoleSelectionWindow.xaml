<Window x:Class="EmployeeMaster.RoleSelection.RoleSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Role" Height="230" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Select a role to continue:" Margin="0,0,0,10" FontWeight="Bold" />
        <ListBox x:Name="RoleListBox" Height="100" />
        <Button Content="Confirm" Click="ConfirmButton_Click" Margin="0,10,0,0" HorizontalAlignment="Right" />
    </StackPanel>
</Window>