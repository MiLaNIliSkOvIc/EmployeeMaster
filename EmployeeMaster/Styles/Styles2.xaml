    <!-- Dark style for Employees Button -->
    <Style x:Key="EmployeesButtonStyle" TargetType="Button">
        <Setter Property="Foreground" Value="#E0E0E0"/>
        <!-- Light gray text -->
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <DockPanel>
                        <materialDesign:PackIcon Kind="ViewDashboard" Foreground="#E0E0E0" Width="24" Height="24" Margin="10,0"/>
                        <!-- Light gray icon -->
                        <TextBlock Text="Employees" Foreground="#E0E0E0" VerticalAlignment="Center" FontSize="16" Margin="5,0"/>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

