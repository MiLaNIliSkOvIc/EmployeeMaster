<Window x:Class="EmployeeMaster.ErrorDisplay.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Message" Height="200" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
       
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <materialDesign:PackIcon Grid.Row="0" Kind="FileDocumentOutline" 
                                 Width="30" 
                                 Height="30"/>
        <TextBlock Grid.Row="0" Text="Information" FontWeight="Bold" Margin="50,7,0,0" />


        <TextBlock Grid.Row="1"
                   x:Name="MessageTextBlock" 
                   TextWrapping="Wrap" 
                   FontSize="14" 
                   Foreground="Black" 
                   TextAlignment="Center" 
                   VerticalAlignment="Center" 
                   Margin="10,0" />

      
        <Button Grid.Row="2"
                Content="Close" 
                Width="80" 
                Background="DarkBlue"
                Foreground="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Click="CloseButton_Click" />
    </Grid>
</Window>
